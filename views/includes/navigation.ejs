<%
  const handleClass = (p) => path === p ? "active" : "";
%>

<header class="main-header">
  <nav class="main-header__nav">
    <ul class="main-header__item-list">
      <li class="main-header__item">
        <a  href="/" 
            class="<%= handleClass('/') %>">
            Shop
        </a>
      </li>
      <li class="main-header__item">
        <a  href="/products" 
            class="<%= handleClass('/products') %>">
            Products
        </a>
      </li>
      <li class="main-header__item">
        <a  href="/cart" 
            class="<%= handleClass('/cart') %>">
            Cart
        </a>
      </li>
      <li class="main-header__item">
        <a  href="/orders" 
            class="<%= handleClass('/orders') %>">
            Orders
        </a>
      </li>
      <li class="main-header__item">
        <a  href="/admin/add-product" 
            class="<%= handleClass('/admin/add-product') %>">
            Add Product
        </a>
      </li>
      <li class="main-header__item">
        <a  href="/admin/products" 
            class="<%= handleClass('/admin/products') %>">
            Admin Product
        </a>
      </li>
    </ul>
  </nav>
</header>

<nav class="mobile-nav">
  <ul class="mobile-nav__item-list">
    <li class="mobile-nav__item">
      <a class="<%= handleClass('/') %>" href="/">Shop</a>
    </li>
    <li class="mobile-nav__item">
      <a class="<%= handleClass('/products') %>" href="/products">Products</a>
    </li>
    <li class="mobile-nav__item">
      <a class="<%= handleClass('/cart') %>" href="/cart">Cart</a>
    </li>
  </ul>
</nav>
