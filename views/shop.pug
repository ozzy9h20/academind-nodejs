extends layouts/main-layout.pug

block styles
  link(rel="stylesheet", href="/css/main.css")
  link(rel="stylesheet", href="/css/product.css")

block content  
  main 
    if prods.length > 0
      .grid 
        each product in prods
          article.card.product-item
            header.card__header 
              h1.product__title #{product.title}
            .card__image 
              img(src="https://upload.wikimedia.org/wikipedia/en/6/6f/Felidae_English_Book_Cover.png", alt="A Book")
            .card__content 
              h2.product__price $19.99
              p.product__description A very interesting book about so many even more 
              .card__actions
                button.btn Add to Cart
    else
      h1 No Products
